package restauranteApp.model.domain;

public class Sobremesa extends Produtos {
	
	private String sabor;
	private String tamanho;
	private int calorias;
	
	public Sobremesa(String idProduto, String nome, double preco, String categoria, String sabor, String tamanho, int calorias) {
		super(idProduto, nome, preco, categoria);
		this.sabor = sabor;
        this.tamanho = tamanho;
        this.calorias = calorias;
	}
	
	@Override
	 public String toString() {
      return "Sobremesa -> sabor = " + sabor + ", tamanho = " + tamanho + "calorias = " + calorias;
	 }


	public String getSabor() {
		return sabor;
	}

	public void setSabor(String sabor) {
		this.sabor = sabor;
	}

	public String getTamanho() {
		return tamanho;
	}

	public void setTamanho(String tamanho) {
		this.tamanho = tamanho;
	}

	public int getCalorias() {
		return calorias;
	}

	public void setCalorias(int calorias) {
		this.calorias = calorias;
	}
	
	
}
